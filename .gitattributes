# Auto detect text files and normalize line endings to LF
* text=auto

# Windows-specific files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.sln text eol=crlf
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf

# Source code files use LF
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf

# CMake files use LF
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Documentation files use LF
*.md text eol=lf
*.txt text eol=lf

# YAML/JSON/XML files use LF
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Shell scripts use LF
*.sh text eol=lf

# Binary files (explicitly mark as binary)
*.exe binary
*.dll binary
*.lib binary
*.obj binary
*.pdb binary
*.ilk binary
*.exp binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary

# Archives
*.zip binary
*.7z binary
*.tar binary
*.gz binary

# Git specific
.gitattributes text eol=lf
.gitignore text eol=lf

# GitHub Actions workflows use LF
.github/** text eol=lf

